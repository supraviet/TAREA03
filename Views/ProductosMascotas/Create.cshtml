@model TAREA_semana3.Models.ProductoMascota
@{
    ViewData["Title"] = "Agregar Producto";
}

<div class="container mt-4">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-success text-white text-center rounded-top-4">
            <h2 class="mb-0"><i class="fas fa-paw me-2"></i>Agregar Producto para Mascota</h2>
        </div>
        <div class="card-body p-4 bg-light">

            <form asp-action="Create" method="post" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label asp-for="Nombre" class="form-label fw-bold">
                        <i class="fas fa-tag me-1"></i>Nombre del Producto
                    </label>
                    <input asp-for="Nombre" class="form-control shadow-sm" placeholder="Ej: Collar antipulgas" />
                    <span asp-validation-for="Nombre" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Descripcion" class="form-label fw-bold">
                        <i class="fas fa-info-circle me-1"></i>Descripción
                    </label>
                    <textarea asp-for="Descripcion" class="form-control shadow-sm" rows="3" placeholder="Describe el producto..."></textarea>
                    <span asp-validation-for="Descripcion" class="text-danger small"></span>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Precio" class="form-label fw-bold">
                            <i class="fas fa-dollar-sign me-1"></i>Precio
                        </label>
                        <input asp-for="Precio" class="form-control shadow-sm" placeholder="Ej: 25.50" />
                        <span asp-validation-for="Precio" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="Categoria" class="form-label fw-bold">
                            <i class="fas fa-list-alt me-1"></i>Categoría
                        </label>
                        <input asp-for="Categoria" class="form-control shadow-sm" placeholder="Ej: Juguetes, Alimento, Higiene" />
                        <span asp-validation-for="Categoria" class="text-danger small"></span>
                    </div>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-1"></i>Cancelar
                    </a>
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-save me-1"></i>Guardar Producto
                    </button>
                </div>
            </form>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
}
